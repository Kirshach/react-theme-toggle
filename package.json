  "license": "ISC",
  "devDependencies": {
    "@types/react": "^18.2.0",
    "dts-bundle-generator": "^8.0.1",
    "react": "^16.8.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.3"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  }
}
